<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#b15c5c" />
            <stroke
                android:width="1dp"
                android:color="#b15d5d" />
            <corners
                android:radius="1dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="#f1f2f2" />
            <stroke
                android:width="1dp"
                android:color="#be6767" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#f8f9fa"
                android:endColor="#e1dddd"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#be6464" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
</selector>